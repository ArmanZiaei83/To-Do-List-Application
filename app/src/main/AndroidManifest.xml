<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todolist">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_noun_to_do_list_1786672"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_noun_to_do_list_1786672"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDoList">
        <activity android:name=".presentation.EditToDoActivty"></activity>
        <activity android:name=".presentation.DefineItemActivity" />
        <activity android:name=".presentation.ToDoActivity" />
        <activity android:name=".presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>