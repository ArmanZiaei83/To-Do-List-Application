<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titleStyle" parent="android:TextAppearance">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#76DCD2</item>
        <item name="fontFamily">@font/regular_cabin</item>
    </style>

    <style name="descStyle" parent="android:TextAppearance">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#3C2F2F</item>
        <item name="fontFamily">@font/regular_cabin</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="priorityStyle" parent="android:TextAppearance">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#3C2F2F</item>
        <item name="fontFamily">@font/regular_cabin</item>
    </style>

    <style name="addButtonStyle">
        <item name="android:src">@drawable/ic_add_button</item>
        <item name="backgroundTint" >#EBF6FF</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="dialoButtonStyle">
        <item name="android:src">@drawable/ic_add_button</item>
        <item name="backgroundTint" >#EBF6FF</item>
        <item name="fontFamily">@font/regular_cabin</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#333938</item>
    </style>

    <style name="inputStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/inputs_shape</item>
        <item name="android:textColorHint">#50565C</item>
        <item name="fontFamily">@font/regular_cabin</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="inputTitleStyle" >
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/regular_cabin</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>